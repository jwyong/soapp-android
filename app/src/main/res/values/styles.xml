<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryLogo</item>
        <item name="colorPrimaryDark">@color/primaryDark4</item>
        <item name="colorAccent">@color/red</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/QuicksandTextViewStyle</item>
    </style>

    <!-- [JAY] toolbar text styling -->
    <style name="toolbarText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--white back btn for toolbars-->
    <style name="toolbarBackBtnWhite" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button_white_70px</item>
    </style>

    <!--black back btn for toolbars-->
    <style name="toolbarBackBtnBlack" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_btn_black_70px</item>
    </style>

    <!-- [jason] toolbar Style-->

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primaryLogo</item>
        <item name="colorPrimaryDark">@color/primaryDark4</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <!--colors-->
        <item name="colorPrimary">@color/primaryDark3</item>
        <item name="colorPrimaryDark">@color/primaryDark4</item>
        <item name="colorButtonNormal">@color/primaryDark2</item>
        <item name="colorAccent">@color/primaryDark2</item>
    </style>

    <!--tab bar-->
    <style name="MyCustomTabLayout_Home" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="tabBackground">@color/grey1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance_Home</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance_Home" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">-10dp</item>
        <item name="textAllCaps">false</item>
    </style>
