<resources>

    <style name="SoAppTheme.AppCompat" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryDark3</item>
        <item name="colorPrimaryDark">@color/primaryDark4</item>
        <item name="colorButtonNormal">@color/primaryDark2</item>
        <item name="colorAccent">@color/primaryDark2</item>
        <item name="windowNoTitle">true</item>
        <item name="textAllCaps">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="SoAppTheme.AppCompatFull" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryDark3</item>
        <item name="colorPrimaryDark">@color/primaryDark4</item>
        <item name="colorButtonNormal">@color/primaryDark2</item>
        <item name="colorAccent">@color/primaryDark2</item>
        <item name="windowNoTitle">true</item>
        <item name="textAllCaps">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--xml layout extends to overlap status bar, but got background colour (default)-->
    <style name="SoAppTheme.AppCompatFullScreen" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryDark3</item>
        <item name="colorPrimaryDark">@color/primaryDark4</item>
        <item name="colorButtonNormal">@color/primaryDark2</item>
        <item name="colorAccent">@color/primaryDark2</item>
        <item name="windowNoTitle">true</item>
        <item name="textAllCaps">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!-- [jason] layout extends to overlap status bar, NO background colour (trans)  -->
    <style name="SoAppTheme.AppCompatFullScreenNoColor" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryDark3</item>
        <item name="colorPrimaryDark">@color/primaryDark4</item>
        <item name="colorButtonNormal">@color/primaryDark2</item>
        <item name="colorAccent">@color/primaryDark2</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
    <!--<item name="android:windowTranslucentStatus">true</item>-->


    <style name="SoAppTheme.AppCompatFullScreenNoColor1" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryDark3</item>
        <item name="colorPrimaryDark">@color/primaryDark4</item>
        <item name="colorButtonNormal">@color/primaryDark2</item>
        <item name="colorAccent">@color/primaryDark2</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- [jason] Timepicker -->
    <style name="style_time_picker_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:textSize">20sp</item>-->
        <item name="android:colorControlNormal">@color/primaryDark2</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:timePickerStyle">@style/style_time_picker</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="style_time_picker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>

</resources>
