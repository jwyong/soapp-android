<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/google_map_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_location_full_green_100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/google_map_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the title name"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/google_map_images"
        app:layout_constraintStart_toEndOf="@+id/google_map_images"
        app:layout_constraintTop_toTopOf="@+id/google_map_images" />

    <TextView
        android:id="@+id/google_map_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the message "
        app:layout_constraintEnd_toEndOf="@+id/google_map_txt"
        app:layout_constraintStart_toStartOf="@+id/google_map_txt"
        app:layout_constraintTop_toBottomOf="@+id/google_map_txt" />


</androidx.constraintlayout.widget.ConstraintLayout>