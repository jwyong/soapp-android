<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:paddingBottom="8dp"
    android:paddingEnd="30dp"
    android:paddingStart="30dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/profile_item_profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/in_propic_circle_150px" />

    <io.github.rockerhieu.emojicon.EmojiconTextView
        android:id="@+id/profile_item_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:text="profile name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/profile_item_admin_status"
        app:layout_constraintStart_toEndOf="@id/profile_item_profile_img"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<TextView-->
    <!--android:id="@+id/profile_item_online_status"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginStart="10dp"-->
    <!--android:paddingTop="-10dp"-->
    <!--android:text="@string/chattab_available"-->
    <!--android:textSize="12sp"-->
    <!--app:layout_constraintLeft_toRightOf="@id/profile_item_profile_img"-->
    <!--app:layout_constraintTop_toBottomOf="@id/profile_item_profile_name" />-->

    <TextView
        android:id="@+id/profile_item_admin_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/chattab_Admin"
        android:textColor="@color/primaryDark4"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/profile_item_profile_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_item_profile_name" />

</androidx.constraintlayout.widget.ConstraintLayout>



