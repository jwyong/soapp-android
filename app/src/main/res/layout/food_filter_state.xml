<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/statearea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:gravity="center"
        android:paddingTop="@dimen/_21sdp">

        <Spinner
            android:id="@+id/spinnerstate"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/xml_roundcorner_apptheme"
            android:entries="@array/state_arrays"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_below="@+id/statearea"
        android:gravity="center"
        android:paddingTop="@dimen/_21sdp">

        <Spinner
            android:id="@+id/spinnerlocation"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/xml_roundcorner_apptheme"
            android:entries="@array/kl_location_arrays"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

    </LinearLayout>

