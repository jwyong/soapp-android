<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPromo"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey2">

        <ImageView
            android:id="@+id/PromoImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_res_def_loading_250px"
            app:layout_constraintBottom_toTopOf="@+id/promo_Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/promo_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="Mee Tarik Warsan Asli"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toTopOf="@+id/promo_Loc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/promo_Loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:text="Kota Damansara : Chainse"
            android:textColor="@color/grey10"
            android:fontFamily="@font/quicksand_book"
            app:layout_constraintBottom_toTopOf="@+id/promo_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/promo_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:padding="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_share_grey100px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/promo_Loc_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/promo_Loc_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:padding="4dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_location_grey_100px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/promo_appt_btn"
            app:layout_constraintStart_toEndOf="@+id/promo_share" />

        <ImageView
            android:id="@+id/promo_appt_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:padding="4dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_schedule_grey100px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/promo_Loc_btn" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:src="@drawable/ic_rating_star_69px"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/promo_rating"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/promo_rating"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="5.0"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

