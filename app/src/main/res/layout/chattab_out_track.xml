<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingEnd="8dp"
    android:paddingTop="3dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ly_chat_bubble_tail_out"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chat_log_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_def_location_loading_400px" />

            <TextView
                android:id="@+id/chat_log_map_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="3dp"
                android:layout_toStartOf="@+id/time_ll"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:singleLine="true"
                android:text="out_Location"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/time_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/chat_log_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00AM"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grey5"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_grey_tick_42px" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>