<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/bottom_sheet_btn1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/xml_roundcorner_primarylogo"
        android:text="Button 1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_btn2"/>

    <Button
        android:id="@+id/bottom_sheet_btn2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xml_roundcorner_primarylogo"
        android:text="Button 2"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_btn1"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_btn3"/>

    <Button
        android:id="@+id/bottom_sheet_btn3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xml_roundcorner_primarylogo"
        android:text="Button 3"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_btn2"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_btn4"/>

    <Button
        android:id="@+id/bottom_sheet_btn4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xml_roundcorner_primarylogo"
        android:text="Button 4"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_btn3"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_btn5" />

    <Button
        android:id="@+id/bottom_sheet_btn5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xml_roundcorner_primarylogo"
        android:text="Button 5"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_btn4" />

</androidx.constraintlayout.widget.ConstraintLayout>